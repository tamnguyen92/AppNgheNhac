<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hinhnen4"
    tools:context=".activity.InforActivity">
    <View

        android:background="@drawable/custom_background_black_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </View>
    <ProgressBar
        android:theme="@style/AppTheme.WhiteAccent"
        android:layout_gravity="center"
        android:id="@+id/ProgressBarInfor"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:elevation="10dp"
            android:id="@+id/tool_bar_infor"
            android:layout_width="match_parent"
            android:layout_height="50dp">
<FrameLayout
    android:elevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:elevation="10dp"
        android:layout_gravity="start|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="italic|bold"

        android:paddingLeft="10dp"
        android:id="@+id/txttitle"
        android:textColor="#FAFAFA"
        android:maxLines="2"
        android:ellipsize="end"

        android:text="tâm sự "/>
    <ImageView
        android:elevation="10dp"
        android:id="@+id/imgtimkieminfor"
        android:src="@drawable/icontimkiem"
        android:layout_margin="5dp"
        android:layout_gravity="end"
        android:layout_width="30dp"
        android:layout_height="40dp" />
</FrameLayout>
        </android.support.v7.widget.Toolbar>
        <View
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/backgroundsublayout"
            android:layout_width="match_parent"
            android:layout_height="4dp"></View>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/lstInfor"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</FrameLayout>