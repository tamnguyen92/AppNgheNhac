<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_gravity="center"
    android:layout_margin="2dp"
    app:cardCornerRadius="2dp"
    android:elevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/frame_chude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgchude"
            android:scaleType="fitXY"
            android:src="@drawable/custom_button"
            android:layout_width="match_parent"
            android:layout_height="120dp" />
        <View
            android:background="@drawable/custom_background_black"
            android:layout_width="match_parent"
            android:layout_height="120dp"></View>
        <TextView
            android:id="@+id/txttenchude"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#EEEEEE"
            android:fontFamily="casual"
            android:textStyle="bold|italic"
            android:maxLines="2"
            android:textAlignment="center"
            android:text="Nhac rock aucosticsssssssssssssssssssssssssssss"
            android:layout_gravity="center"

            android:textSize="18sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            />
    </FrameLayout>
</android.support.v7.widget.CardView>