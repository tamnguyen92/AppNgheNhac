<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:elevation="3dp"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/frame_baihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_gravity="center"

            android:orientation="vertical"
            android:layout_width="130dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imghinhbaihat"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_width="130dp"
                android:layout_height="120dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/txttenbaihat"
                android:textColor="#000000"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tâm sự người hát nhạc buồn"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:textStyle="italic"
                android:layout_marginLeft="5dp"
                android:id="@+id/txttencasi"
                android:textColor="#9E9E9E"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tâm sự "/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:background="@drawable/custom_background_banner"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/icon_headphone"
                android:scaleType="centerCrop"
                android:layout_width="16dp"
                android:layout_height="16dp" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/txtluotnghe"
                android:textStyle="italic|bold"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"/>

        </LinearLayout>
        <ImageView
            android:alpha="0.5"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/imglove"
            android:layout_gravity="top|right"
            android:layout_weight="1"
            android:src="@drawable/iconloved"
            android:layout_width="20dp"
            android:layout_height="30dp" />
    </FrameLayout>

</android.support.v7.widget.CardView>