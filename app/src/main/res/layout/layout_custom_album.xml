<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/frame_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_gravity="center"

            android:orientation="vertical"
            android:layout_width="120dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imghinhalbum"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="120dp" />
            <TextView
                android:id="@+id/txttenalbum"
                android:textColor="#000000"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tâm sự người hát nhạc buồn"/>
            <TextView
                android:textStyle="italic"

                android:id="@+id/txttencasialbum"
                android:textColor="#9E9E9E"
                android:maxLines="2"
                android:textSize="18sp"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tâm sự "/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:background="@drawable/custom_background_banner"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/icon_headphone"
                android:scaleType="centerCrop"
                android:layout_width="16dp"
                android:layout_height="16dp" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/txtluotnghealbum"
                android:textStyle="italic|bold"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"/>
        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>