<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/frame_baihat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_gravity="center"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imghinhbaihat"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:fontFamily="cursive"
                    android:textStyle="italic"
                    android:textSize="17sp"
                    android:paddingLeft="10dp"
                    android:id="@+id/txttenbaihat"
                    android:textColor="#000000"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tâm sự người hát nhạc buồn"/>
                <TextView
                    android:textSize="17sp"
                    android:textStyle="italic"
                    android:paddingLeft="10dp"
                    android:id="@+id/txttencasi"
                    android:textColor="#9E9E9E"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tâm sự "/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:background="@drawable/custom_background_banner"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/icon_headphone"
                android:scaleType="centerCrop"
                android:layout_width="16dp"
                android:layout_height="16dp" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/txtluotnghe"
                android:textStyle="italic|bold"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"/>
        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>