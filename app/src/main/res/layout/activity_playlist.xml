<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hinhnen4"
    android:orientation="vertical"
    tools:context=".activity.PlaylistActivity">
    <FrameLayout
        android:background="@drawable/custom_background_black_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/ProgressBarPlaylist"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarPlaylist"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

            </android.support.v7.widget.Toolbar>
            <android.support.v7.widget.RecyclerView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerViewPlaylist"
                ></android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom|center"
            android:background="@color/colortran"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_gravity="bottom|center"
            android:id="@+id/linearlayouttrangchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>
    </FrameLayout>

</LinearLayout>