<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="40dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="2dp"
    >
    <FrameLayout
        android:id="@+id/frame_baihat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="10"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="15dp"
               android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:id="@+id/imghinhbaihat"
                    android:scaleType="centerCrop"
                    android:layout_margin="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="6.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:fontFamily="cursive"
                    android:textStyle="italic"
                    android:textSize="17sp"
                    android:paddingLeft="10dp"
                    android:id="@+id/txttenbaihat"
                    android:textColor="#000000"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tâm sự người hát nhạc buồn"/>
                <TextView
                    android:textSize="17sp"
                    android:textStyle="italic"
                    android:paddingLeft="10dp"
                    android:id="@+id/txttencasi"
                    android:textColor="#FAFAFA"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tâm sự "/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:alpha="0.5"
                    android:scaleType="fitXY"
                    android:id="@+id/imglove"
                    android:src="@drawable/iconloved"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:background="@drawable/custom_background_banner"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/icon_headphone"
                android:scaleType="centerCrop"
                android:layout_width="16dp"
                android:layout_height="16dp" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/txtluotnghe"
                android:textStyle="italic|bold"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"/>
        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>