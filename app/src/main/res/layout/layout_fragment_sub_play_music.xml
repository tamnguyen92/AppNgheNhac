<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/backgroundsublayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imghinhsublayout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:scaleType="centerCrop" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/linearsublayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txttenbaihatsublayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="cursive"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="tâm sự người hát nhạc buồn"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/txttencasisublayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingLeft="5dp"
                    android:text="tâm sự "
                    android:textColor="#9E9E9E"
                    android:textSize="14sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">
                <ImageView

                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/btnpresub"
                    android:scaleType="centerInside"
                    android:src="@drawable/back_black"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <ImageView

                    android:layout_marginTop="2dp"
                    android:id="@+id/btnplaysub"
                    android:scaleType="centerInside"
                    android:src="@drawable/pause"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <ImageView
                   android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/btnnextsub"
                    android:scaleType="centerInside"
                    android:src="@drawable/next_black"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
        </LinearLayout>
   <View
       android:background="#757575"
       android:layout_width="match_parent"
       android:layout_height="1.5dp">

   </View>
    </LinearLayout>

</FrameLayout>