<?xml version="1.0" encoding="utf-8"?>
<FrameLayout


    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/backgroundsublayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout

            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <FrameLayout
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_margin="2dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:id="@+id/imghinhsublayout"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/linearsublayout"
                android:orientation="vertical"
                android:layout_weight="5.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >
                <TextView
                    android:paddingTop="5dp"
                    android:fontFamily="cursive"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    android:id="@+id/txttenbaihatsublayout"
                    android:textColor="#000000"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tâm sự người hát nhạc buồn" />
                <TextView
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:id="@+id/txttencasisublayout"
                    android:textColor="#9E9E9E"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tâm sự "/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"></LinearLayout>
        </LinearLayout>
   <View
       android:background="#757575"
       android:layout_width="match_parent"
       android:layout_height="1.5dp">

   </View>
    </LinearLayout>

</FrameLayout>